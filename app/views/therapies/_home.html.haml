.header 
    .header_box
        %P.header_box_name 
            = current_user.name
        %ul.header_box_link
            %li.link 
                = link_to new_client_path do
                    = icon('fas', 'user')
            %li.link 
                = link_to edit_user_path(current_user) do
                    = icon('fas', 'edit')
.clients
    - current_user.clients.each do |client| 
        .client
            = link_to client_path(client), class: 'client' do
                .client_phone 
                .costomer_company
                    = client.job
                .client_name 
                    = client.name
   
 