.header
    .header_box
        %P.header_box_name 
            = @client.name
        %ul.header_box_link
            %li.link 
                = link_to root_path do
                    = icon('fas', 'reply')
            %li.link 
                = link_to "#" do
                    = icon('fas', 'clipboard')
            %li.link 
                = link_to edit_client_path(@client) do
                    = icon('fas', 'edit')
            %li.link 
                = link_to "#" do
                    = icon('fas', 'trash')
.body
    %ul.information
        .name
            %p 名前
            %li
                = @client.name
        .sex
            %p 性別
            %li
                = @client.sex
        .job
            %p 職業
            %li
                = @client.job
        .address
            %p 住所
            %li
                = @client.address
        .from
            %p 出生地
            %li
                = @client.from
        %li.family
            = @client.family
        %li.character
            = @client.character
        %li.complaint
            = @client.complaint
        %li.history
            = @client.history
        %li.other
            = @client.other
        %li.intake
            = @client.intake
        %li.photo
            = @client.photo
        %li.email
            = @client.email
        %li.phone
            = @client.phone
    .therapies
        %ul.therapies_icon
            %li.link 
                = link_to "#" do
                    = icon('fas', 'edit')
            %li.link 
                = link_to "#" do
                    = icon('fas', 'trash')
        .therapy
            .date
            .content
    .result
        = render "results/example"





